{
  "name": "baller-stats",
  "version": "0.0.1",
  "description": "Web app to collect and visualize your player statistics.",
  "type": "module",
  "scripts": {
    "start": "vite",
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|tsx|json)\"",
    "lint": "eslint --color --cache --ignore-path .eslintignore --ext .js,.ts,.tsx",
    "pre-prod": "npm run build -- --base=/baller-stats-preprod/ && npm run pre-prod-only",
    "pre-prod-only": "npm run pre-prod-clean && npm run pre-prod-push",
    "pre-prod-clean": "rm -rf /var/www/marius.click/html/baller-stats-preprod/*",
    "pre-prod-push": "cp -r dist/* /var/www/marius.click/html/baller-stats-preprod/",
    "prod-clean": "rm -rf /var/www/marius.click/html/baller-stats/*",
    "prod-push": "cp -r dist/* /var/www/marius.click/html/baller-stats/",
    "prod": "npm run build -- --base=/baller-stats/ && npm run prod-only",
    "prod-only": "npm run prod-clean && npm run prod-push"
  },
  "license": "MIT",
  "devDependencies": {
    "@fontsource/roboto": "^5.0.13",
    "@solidjs/router": "^0.13.6",
    "@tailwindcss/forms": "^0.5.7",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "autoprefixer": "^10.4.19",
    "daisyui": "^4.12.10",
    "globals": "^15.8.0",
    "lucide-solid": "^0.407.0",
    "postcss": "^8.4.39",
    "prettier": "^3.3.3",
    "solid-js": "^1.8.18",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.16.0",
    "vite": "^5.3.3",
    "vite-plugin-solid": "^2.10.2"
  }
}
